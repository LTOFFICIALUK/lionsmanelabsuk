{
  "name": "blue-lotus-migration-tools",
  "version": "1.0.0",
  "description": "Tools for migrating Shopify articles to Blue Dream Tea UK custom website",
  "main": "batch-migration-script.js",
  "scripts": {
    "migrate": "node batch-migration-script.js",
    "migrate:dry-run": "node batch-migration-script.js --dry-run --verbose",
    "migrate:high": "jq '[.[] | select(.priority == \"high\")]' articles.json | node batch-migration-script.js --input /dev/stdin",
    "migrate:medium": "jq '[.[] | select(.priority == \"medium\")]' articles.json | node batch-migration-script.js --input /dev/stdin",
    "migrate:low": "jq '[.[] | select(.priority == \"low\")]' articles.json | node batch-migration-script.js --input /dev/stdin",
    "validate": "node -e \"console.log('Validating articles.json...'); JSON.parse(require('fs').readFileSync('articles.json', 'utf8')); console.log('âœ… Valid JSON format');\""
  },
  "keywords": [
    "migration",
    "shopify",
    "seo",
    "content",
    "blue-lotus",
    "articles"
  ],
  "author": "Blue Dream Tea UK",
  "license": "MIT",
  "dependencies": {
    "yargs": "^17.7.2"
  },
  "devDependencies": {},
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "."
  }
} 